############################################################################
# PL/DPL with MPL checks: see modes 33-40 for codes/frequencies
############################################################################

	mode 11
	{
		txfreq 150.000;
		rxfreq 150.000;
		txdpl 023;
		txmpl yes;
		rxdpl 023;
		rxmpl yes;
		timeout 165;
		txpower high;
		scantype none;
		tbscan no;
		npscansource fixed;
	};
	mode 12
	{
		txfreq 150.000;
		rxfreq 150.000;
		txpl 100.0;
		txmpl yes;
		rxpl 100.0;
		rxmpl yes;
		timeout 165;
		txpower high;
		scantype none;
		tbscan no;
		npscansource fixed;
	};

############################################################################
# Timeout: 13 is infinite, 14 60 seconds, 15 465 seconds
############################################################################

	mode 13
	{
		txfreq 150.000;
		rxfreq 150.000;
		timeout 0;
		txpower high;
	};
	mode 14
	{
		txfreq 150.000;
		rxfreq 150.000;
		timeout 60;
		txpower high;
	};
	mode 15
	{
		txfreq 150.000;
		rxfreq 150.000;
		timeout 465;
		txpower high;
	};

############################################################################
# Power: mode 1=high; mode 2=low
############################################################################

	mode 16
	{
		txfreq 150.000;
		rxfreq 150.000;
		txpower high;
	};
	mode 17
	{
		txfreq 150.000;
		rxfreq 150.000;
		txpower low;
	};

############################################################################
# Reference frequency: 18 forces 5000, 19 forces 6250, 20 needs 6250 but
# sets nothing
############################################################################

	mode 18
	{
		txfreq 150.000;
		rxfreq 150.000;
		txpl 100.0;
		txmpl yes;
		rxpl 100.0;
		rxmpl yes;
		timeout 165;
		txpower high;
		refreq 5000;
		scantype none;
		tbscan no;
		npscansource fixed;
	};
	mode 19
	{
		txfreq 150.0125;
		rxfreq 150.0125;
		txpl 100.0;
		txmpl yes;
		rxpl 100.0;
		rxmpl yes;
		timeout 165;
		txpower high;
		refreq 6250;
		scantype none;
		tbscan no;
		npscansource fixed;
	};
	mode 18
	{
		txfreq 150.0125;
		rxfreq 150.0125;
		txpl 100.0;
		txmpl yes;
		rxpl 100.0;
		rxmpl yes;
		timeout 165;
		txpower high;
		scantype none;
		tbscan no;
		npscansource fixed;
	};

############################################################################
# Other scantypes: 19 sglpri, 20 dblpri
############################################################################

	mode 19
	{
		txfreq 173.000;
		rxfreq 173.000;
		timeout 165;
		txpower high;
		scantype sglpri;
		p1scanmode 1;
		p2scanmode 2;
		tbscan no;
	};
	mode 20
	{
		txfreq 173.000;
		rxfreq 173.000;
		timeout 165;
		txpower high;
		scantype dblpri;
		p1scanmode 1;
		p2scanmode 2;
		tbscan no;
	};

############################################################################
# Talkback scan
############################################################################

	mode 21
	{
		txfreq 173.000;
		rxfreq 173.000;
		npscanlist 1 2 3 4;
		timeout 165;
		txpower high;
		scantype nonpri;
		tbscan yes;
		npscansource fixed;
	};

############################################################################
# Operator-selectable scan modes
############################################################################

	mode 22
	{
		txfreq 173.000;
		rxfreq 173.000;
		timeout 165;
		txpower high;
		scantype nonpri;
		tbscan yes;
		npscansource selectable;
	};

