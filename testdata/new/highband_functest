############################################################################
# Global settings
############################################################################

	nmodes 40;
	txvcosplit 150.000; # Fix us!  For tx, factory setting mostly works
	rxvcosplit 154.000; # For rx, it depends on how you mod the VCO

############################################################################
# Non-priority fixed scan: mode 1 scans 2, 3, 4
############################################################################

	mode 1
	{
		txfreq 150.000;
		rxfreq 151.000;
		npscanlist 1 2 3 4;
		txpl 100.0;
		txmpl no;
		rxpl 100.0;
		rxmpl no;
		timeout 165;
		txpower high;
		scantype nonpri;
		tbscan no;
		npscansource fixed;
	};
	mode 2
	{
		txfreq 152.000;
		rxfreq 153.000;
		txpl 100.0;
		txmpl no;
		rxpl 100.0;
		rxmpl no;
		timeout 165;
		txpower high;
		scantype none;
		tbscan no;
		npscansource fixed;
	};
	mode 3
	{
		txfreq 154.000;
		rxfreq 155.000;
		txpl 100.0;
		txmpl no;
		rxpl 100.0;
		rxmpl no;
		timeout 165;
		txpower high;
		scantype none;
		tbscan no;
		npscansource fixed;
	};
	mode 4
	{
		txfreq 156.000;
		rxfreq 157.000;
		txpl 100.0;
		txmpl no;
		rxpl 100.0;
		rxmpl no;
		timeout 165;
		txpower high;
		scantype none;
		tbscan no;
		npscansource fixed;
	};

